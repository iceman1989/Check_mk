# <<<mssql_versions>>>
# MSSQL_SQLEXPRESS  10.50.1600.1

def inventory_mssql_versions(info):
    inventory = []
    for line in info:
        if len(line) == 2 and line[0] != "Error:":
            inventory.append((line[0], None))
    return inventory

def check_mssql_versions(item, _unused, info):
    for line in info:
        if line[0] == item:
            return (0, 'Server is running Version %s' % line[1])
    return (2, "Server objance not existing or not running")


check_info["mssql_versions"] = {
    'check_function':          check_mssql_versions,
    'inventory_function':      inventory_mssql_versions,
    'service_description':     '%s Version',
}
