fjdarye60_sum_status = { 1: 'unknown', 2: 'unused', 3: 'ok',
                         4: 'warning', 5: 'failed' }

def inventory_fjdarye60_sum(info):
    return [ (int(index), '', None) for index, status in info ]


def check_fjdarye60_sum(index, _no_param, info):
    for line in info:
        if int(line[0]) == index:
            status = int(line[1])
            text = "Status is %s" % fjdarye60_sum_status[status]

            if status == 3:
                return (0, "%s" % text)
            elif status == 4:
                return (1, "%s" % text)
            else:
                return (2, "%s" % text)

    return (3, "No status summary %d present" % index)

# 1: fjdaryUnitStatus


check_info["fjdarye60_sum"] = {
    'check_function':          check_fjdarye60_sum,
    'inventory_function':      inventory_fjdarye60_sum,
    'service_description':     'Summary Status %s',
    # 1: fjdaryUnitStatus
    'snmp_info':               ('.1.3.6.1.4.1.211.1.21.1.60.6', [0, '0']),
    'snmp_scan_function':      \
          lambda oid: oid(".1.3.6.1.2.1.1.2.0") == ".1.3.6.1.4.1.211.1.21.1.60",
}
